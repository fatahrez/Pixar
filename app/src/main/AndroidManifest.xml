<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.fatah.pixar">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".PixarApp"
        android:allowBackup="true"
        android:icon="@mipmap/baseline_photo_camera_black_48"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/baseline_photo_camera_black_48"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pixar"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Pixar.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>